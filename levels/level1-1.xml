<?xml version = "1.0" encoding="UTF-8" standalone="yes" ?>
<!-- Un fichier par level
	Heigth = Hauteur
	Length = Longueur
	Width = Largeur
	is_start : Uniquement sur le block de départ /!\ Un seul départ possible
	Type des blocks = Nom des classes
	Nom des actions disponnibles : Nom des classes
	Procédures et nombre d'actions :
		- Actions dans main : attribut action_nb
		- Si procédures : <procedure nb_proc="2"/>
-->

<map>
	<level_name>1-1</level_name>
	<starting_dir>SOUTH</starting_dir>
	<floor level="0">
		<block type="NormalBlock" is_start="true">
			<x>1</x>
			<y>3</y>
		</block>
		<block type="NormalBlock">
			<x>1</x>
			<y>2</y>
		</block>
		<block type="LightBlock">
			<x>1</x>
			<y>1</y>
		</block>
	</floor>
	<action_list>
		<action>Forward</action>
		<action>Light</action>
		<action>Jump</action>
		<action>P1</action>
		<action>Fork</action>
		<action>UseChest</action>
	</action_list>
	<functions>
		<main nb_action="5"/>
	</functions>
	<score>
		<min>3</min>
		<max>5</max>
	</score>
	<solution>
		<main_sol>
			<instruction color="ROUGE">Forward</instruction>
			<instruction color="DEFAUT" loop="3">For</instruction>
		</main_sol>
		<proc1_sol>
			<instruction color="VERT">Break</instruction>
			<instruction color="BLEU" loop="6">For</instruction>
		</proc1_sol>
		<fork_sol>
			<instruction color="VERT" loop="6">For</instruction>
		</fork_sol>
	</solution>
</map>